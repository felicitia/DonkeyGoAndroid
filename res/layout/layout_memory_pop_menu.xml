<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/checkAllMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dp"
        android:background="@drawable/all_memory" />

    <Button
        android:id="@+id/checkMyMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dp"
        android:background="@drawable/my_memory" />

    <Button
        android:id="@+id/addMyMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dp"
        android:background="@drawable/add_memory" />

    <Button
        android:id="@+id/modifyMyMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dp"
        android:background="@drawable/go_on" />

</LinearLayout>